        <CheckBox x:Name="cbxps2" Content="Playstation 2" HorizontalAlignment="Left" Height="22" Margin="68,237,0,0" VerticalAlignment="Top" Width="128" FontSize="18" Checked="cbxps2_Checked" Unchecked="cbxps2_Unchecked"/>
        <CheckBox x:Name="cbxxbox" Content="Xbox" HorizontalAlignment="Left" Height="22" Margin="239,237,0,0" VerticalAlignment="Top" Width="128" FontSize="18" Checked="cbxxbox_Checked" Unchecked="cbxxbox_Unchecked"/>
