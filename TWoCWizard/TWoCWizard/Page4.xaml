<Page x:Class="TWoCWizard.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TWoCWizard"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="450"
      Title="Page4">

    <Grid>
        <Image x:Name="imgPreview" HorizontalAlignment="Left" Height="100" Margin="46,32,0,0" VerticalAlignment="Top" Width="100"/>
        <Image x:Name="imgExample" HorizontalAlignment="Left" Height="100" Margin="295,32,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="label" Content="Preview" HorizontalAlignment="Left" Margin="67,132,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Example" HorizontalAlignment="Left" Margin="321,132,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxY" HorizontalAlignment="Left" Height="23" Margin="190,87,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="55" PreviewTextInput="tbxY_PreviewTextInput"/>
        <RepeatButton x:Name="btnYUp" Content="/\" HorizontalAlignment="Left" Margin="250,87,0,0" VerticalAlignment="Top" Width="23" Height="12" Click="btnYUp_Click" FontSize="6"/>
        <RepeatButton x:Name="btnYDown" Content="\/" HorizontalAlignment="Left" Margin="250,99,0,0" VerticalAlignment="Top" Width="23" Height="12" Click="btnYDown_Click" FontSize="6"/>
        <Label x:Name="labelPS2" Content="Increase the Y value so that the preview is roughly in the centre of&#xD;&#xA;the screen. Once this is complete proceed to the next page." HorizontalAlignment="Left" Margin="37,177,0,0" VerticalAlignment="Top" Height="105" Width="380" Visibility="Hidden"/>
        <Label x:Name="label3" Content="Y:" HorizontalAlignment="Left" Margin="159,87,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelXBOX" Content="Increase the Y value so that the bottom right of the G in LOADING&#xA;in the middle of the screen touches the bottom right corner of the&#xD;&#xA;preview. Once this is complete proceed to the next page." HorizontalAlignment="Left" Margin="37,177,0,0" VerticalAlignment="Top" Height="105" Width="380" Visibility="Hidden"/>
    </Grid>
</Page>
